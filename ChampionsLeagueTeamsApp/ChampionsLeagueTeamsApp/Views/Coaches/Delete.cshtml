@model ChampionsLeagueTeamsApp.Models.Coach

@{
    ViewData["Title"] = "Delete Coach";
}

<h2>Delete Coach</h2>

<h3>Are you sure you want to delete this coach?</h3>

<div>
    <p><strong>Name:</strong> @Html.Encode(Model.Name)</p>
    <p><strong>Experience:</strong> @Html.Encode(Model.Experience.ToString()) years</p>
    <p><strong>Team:</strong> @Html.Encode(Model.Team.Name)</p>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
</form>

<a class="btn btn-secondary" asp-action="Index">Back to List</a>