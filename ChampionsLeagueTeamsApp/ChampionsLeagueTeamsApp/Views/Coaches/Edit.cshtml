@model ChampionsLeagueTeamsApp.Models.Coach

@{
    ViewData["Title"] = "Edit Coach";
}

<h2>Edit Coach</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Experience" class="control-label"></label>
        <input asp-for="Experience" class="form-control" />
        <span asp-validation-for="Experience" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TeamId" class="control-label">Team</label>
        <select asp-for="TeamId" asp-items="ViewBag.Teams" class="form-control">
            <option value="">Select a Team</option>
        </select>
        <span asp-validation-for="TeamId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

