@model ChampionsLeagueTeamsApp.Models.Team

@{
    ViewData["Title"] = "Delete Team";
}

<h2>Delete Team</h2>

<h3>Are you sure you want to delete this team?</h3>

<div>
    <p><strong>Name:</strong> @Html.Encode(Model.Name)</p>
    <p><strong>Country:</strong> @Html.Encode(Model.Country)</p>
    <p><strong>Champions League Wins:</strong> @Html.Encode(Model.ChampionsLeagueWins.ToString())</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
</form>

<a class="btn btn-secondary" asp-action="Index">Back to List</a>