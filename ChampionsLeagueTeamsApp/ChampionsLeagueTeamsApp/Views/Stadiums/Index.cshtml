@model IEnumerable<ChampionsLeagueTeamsApp.Models.Stadium>

@{
    ViewData["Title"] = "Stadiums List";
}

<h2>Stadiums List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Capacity</th>
            <th>Location</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var stadium in Model)

        {
            <tr>
                <td>@Html.Encode(stadium.Name)</td>
                <td>@Html.Encode(stadium.Capacity)</td>
                <td>@Html.Encode(stadium.Location)</td>
                <td>
                    <a class="btn btn-info" asp-controller="Stadiums" asp-action="Details" asp-route-id="@stadium.Id">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>